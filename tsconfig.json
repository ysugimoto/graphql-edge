{
  "compilerOptions": {
    "target": "es2016",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
